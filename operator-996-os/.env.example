# ========================================
# OPERATOR-996 COGNITIVE OS
# Environment Configuration Template
# ========================================

# --------------------------------------
# Backend Configuration
# --------------------------------------
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8000
LOG_LEVEL=INFO
PYTHONUNBUFFERED=1

# --------------------------------------
# Frontend Configuration
# --------------------------------------
REACT_APP_API_BASE=http://localhost:8000
REACT_APP_WS_BASE=ws://localhost:8000

# --------------------------------------
# Database Configuration (Optional)
# --------------------------------------
# Uncomment to enable PostgreSQL persistence
# DATABASE_URL=postgresql://user:password@localhost:5432/cognitive_os
# DB_POOL_SIZE=10
# DB_MAX_OVERFLOW=20

# --------------------------------------
# Redis Cache (Optional)
# --------------------------------------
# Uncomment to enable Redis caching
# REDIS_URL=redis://localhost:6379/0
# REDIS_TTL=3600

# --------------------------------------
# Security & Authentication (Future)
# --------------------------------------
# JWT_SECRET_KEY=your-secret-key-here-change-in-production
# JWT_ALGORITHM=HS256
# JWT_EXPIRATION_HOURS=24
# CORS_ORIGINS=http://localhost:3000,https://yourdomain.com

# --------------------------------------
# External API Keys (Optional)
# --------------------------------------
# OpenAI API for enhanced reasoning
# OPENAI_API_KEY=sk-...

# Perplexity API for online knowledge
# PERPLEXITY_API_KEY=ppl-...

# --------------------------------------
# ML/AI Configuration
# --------------------------------------
# Sentence transformer model for semantic search
SENTENCE_TRANSFORMER_MODEL=all-MiniLM-L6-v2

# Pattern detection confidence threshold
PATTERN_CONFIDENCE_THRESHOLD=0.7

# Anomaly detection sensitivity (0.0-1.0)
ANOMALY_SENSITIVITY=0.5

# --------------------------------------
# Docker Configuration
# --------------------------------------
COMPOSE_PROJECT_NAME=operator996-cognitive-os

# --------------------------------------
# Monitoring & Logging (Optional)
# --------------------------------------
# SENTRY_DSN=https://your-sentry-dsn
# LOG_FILE_PATH=/var/log/cognitive-os/app.log
# ENABLE_METRICS=false

# --------------------------------------
# Development Settings
# --------------------------------------
DEBUG=false
RELOAD=false
